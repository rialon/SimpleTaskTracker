@model SimpleTaskTracker.WEB.Models.UserTaskViewModel

@{
    ViewBag.Title = "Create";
}

<div class="card card-body bg-light col-lg-5 float-left">
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group row">
            @Html.LabelFor(m => m.Name, new { value = "Name", @class = "col-form-label col-3" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control col-8", required = "required" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Description, new { value = "Description", @class = "col-form-label col-3" })
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control col-8", required = "required" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.DueDate, new { value = "Due Date", @class = "col-form-label col-3" })
            @Html.TextBoxFor(m => m.DueDate, new { @class = "form-control col-8", @type = "date", required = "required" })
        </div>
        <button type="submit" class="btn btn-primary col-sm-4 text-lg-center">Create</button>
    }
</div>

