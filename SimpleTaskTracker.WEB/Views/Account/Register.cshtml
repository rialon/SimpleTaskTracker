@model SimpleTaskTracker.WEB.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<div class="card card-body bg-light col-lg-5 float-left">
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group row">
            @Html.LabelFor(m => m.Name, new { value = "Name", @class = "col-form-label col-3" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control col-8", required = "required" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Surname, new { value = "Surname", @class = "col-form-label col-3" })
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control col-8", required = "required" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { value = "Email", @class = "col-form-label col-3" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-8", @type = "email", required = "required" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Password, new { value = "Password", @class = "col-form-label col-3" })
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control col-8", @type = "password", required = "required", id = "password" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.ConfirmPassword, new { value = "Confirm password", @class = "col-form-label col-3" })
            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control col-8", @type = "password", required = "required", id = "confirmPassword" })
        </div>
        <button type="submit" class="btn btn-primary col-sm-4 text-lg-center">Register</button>
    }
</div>
