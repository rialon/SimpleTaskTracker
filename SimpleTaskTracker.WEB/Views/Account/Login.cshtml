@model SimpleTaskTracker.WEB.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="card card-body bg-light col-lg-4 float-left">
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { value = "Email", @class = "col-form-label col-2" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-8", @type = "email" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Password, new { value = "Password", @class = "col-form-label col-2" })
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control col-8", @type = "password" })
        </div>
        <button type="submit" class="btn btn-primary col-sm-4 text-lg-center">Sign in</button>
    }
</div>

